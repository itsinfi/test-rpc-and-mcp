FROM ghcr.io/ericlbuehler/mistral.rs:cpu-0.6.0
WORKDIR /app
RUN mkdir -p /models
COPY model.gguf /models/
COPY mcp.json /app/mcp.json
EXPOSE 8080
CMD ["mistralrs-server", "-p", "8080", "--mcp-config", "/app/mcp.json", "gguf", "--quantized-model-id", "Solshine/Llama-3.2-1B-Q4_K_M-GGUF", "--quantized-filename", "llama-3.2-1b-q4_k_m.gguf"]